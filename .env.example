# =======================================================
# Environment Variables for the Production Support Portal
# =======================================================

# --- Main API Gateway ---
# The port for the main API Gateway. Frontend applications should point to this.
PORT=3000

# --- Service Ports & URLs ---
# Ports for individual microservices. The API Gateway proxies to these.
JIRA_SERVICE_PORT=3001
GITHUB_SERVICE_PORT=3002
NOTIFICATION_SERVICE_PORT=3003
ONBOARDING_SERVICE_PORT=3004
KPI_SERVICE_PORT=3005
VULNERABILITY_SERVICE_PORT=3006
USER_SERVICE_PORT=3007
TEMPLATE_SERVICE_PORT=3008
ANALYTICS_SERVICE_PORT=3009
INTEGRATION_SERVICE_PORT=3010


# Internal URLs for inter-service communication (used by some services)
JIRA_SERVICE_URL=http://localhost:${JIRA_SERVICE_PORT}
GITHUB_SERVICE_URL=http://localhost:${GITHUB_SERVICE_PORT}
NOTIFICATION_SERVICE_URL=http://localhost:${NOTIFICATION_SERVICE_PORT}
ONBOARDING_SERVICE_URL=http://localhost:${ONBOARDING_SERVICE_PORT}
KPI_SERVICE_URL=http://localhost:${KPI_SERVICE_PORT}
VULNERABILITY_SERVICE_URL=http://localhost:${VULNERABILITY_SERVICE_PORT}
USER_SERVICE_URL=http://localhost:${USER_SERVICE_PORT}
TEMPLATE_SERVICE_URL=http://localhost:${TEMPLATE_SERVICE_PORT}
ANALYTICS_SERVICE_URL=http://localhost:${ANALYTICS_SERVICE_PORT}
INTEGRATION_SERVICE_URL=http://localhost:${INTEGRATION_SERVICE_PORT}

# --- Database Service ---
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=production-support-portal
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}
OLD_DB_USER=olduser
OLD_DB_HOST=oldhost
OLD_DB_DATABASE=olddb
OLD_DB_PASSWORD=oldpassword
OLD_DB_PORT=5432

# --- User & Auth Service ---
# Secret key for JWT signing. Change this for production.
JWT_SECRET=your-super-secret-key-that-should-be-in-env

# --- VWGoA Jira Integration ---
# Jira instance host and authentication details
VWGOA_JIRA_HOST=
VWGOA_JIRA_COOKIE_NAME=tenant.session.token
VWGOA_JIRA_COOKIE_VALUE=

# --- KPIs Configuration ---
OKR_LABEL=
JIRA_AGILE_BOARD_ID=


# --- Vulnerability Configuration ---
JIRA_PROJECT_KEY=
JIRA_ISSUE_TYPE_NAME=
JIRA_TSHIRT_FIELD_ID=
JIRA_TSHIRT_DEFAULT_VALUE=
JIRA_DEFAULT_NEW_TICKET_STATUS=

#Slack
SLACK_WEBHOOK_URL=

# --- GitHub Integration ---
GITHUB_TOKEN_ONEAUDI=
GITHUB_TOKEN_AUDI_MARKETING=

# --- KPI Service ---
# Number of business hours in a day, for time spent calculations.
HOURS_PER_BUSINESS_DAY=8

# --- Frontend Configuration ---
VITE_API_URL=http://localhost:${PORT}/api
