{
  "name": "production-support-portal",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:service:gateway": "npm start --workspace=api-gateway",
    "start:service:kpi": "npm start --workspace=kpi-service",
    "start:service:vulnerability": "npm start --workspace=vulnerability-service",
    "start:service:jira": "npm start --workspace=jira-service",
    "start:service:github": "npm start --workspace=github-service",
    "start:service:user": "npm start --workspace=user-service",
    "start:service:notification": "npm start --workspace=notification-service",
    "start:service:onboarding": "npm start --workspace=onboarding-service",
    "start:backend": "dotenv concurrently \"npm:start:service:*\"",
    "start:frontend": "dotenv -- npm run dev --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv-cli": "^10.0.0"
  }
}
